[user]
  name = Jake Craige
  email = git@jcraige.com
  signingkey = AC6DCCE1

[alias]
  amend = commit --amend --reuse-message HEAD
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ca = commit --amend -v
  ci = commit -v
  co = checkout
  co-pr = !sh -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' -
  conflicts = "!$EDITOR $(git diff --name-only --diff-filter=U)"
  pf = push --force-with-lease
  st = status
  standup = shortlog --since=yesterday
  today = shortlog --since=midnight
  undo = !git reset HEAD^
  up = !git fetch origin && git rebase origin/master
  pr = !git push && hub compare
  ctags = !.git/hooks/ctags

[apply]
  whitespace = warn

[push]
  default = current

[color]
  ui = auto

[core]
  # This option is sometimes a pain when dealing with win vs lin files since I do a lot in WSL2 these days.
  # autocrlf = input
  excludesfile = ~/.dotfiles/gitignore
  # Obviously windows only
  sshCommand = /mnt/c/Windows/System32/OpenSSH/ssh.exe

[merge]
  ff = only

[credential]
  helper = osxkeychain

[credential "https://github.com"]
  username = jakecraige

[difftool]
  prompt = false

[mergetool]
  prompt = false

[commit]
  template = ~/.dotfiles/gitmessage

  # gpg is a pain and I'm lazy
  # gpgsign = true

[fetch]
  prune = true

[rebase]
  autosquash = true

[diff]
  tool = vimdiff
  prompt = false
  compactionHeuristic = true

[diff-so-fancy]
  markEmptyLines = false

[init]
  templatedir = ~/.dotfiles/git_template
