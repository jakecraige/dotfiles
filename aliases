alias c='clear'
alias reload='exec /bin/zsh'
alias r='reload'
alias tma="tmux attach -t"
alias tmn="tmux new -s"
alias tml="tmux ls"
alias rake="noglob rake" # necessary to make rake work inside of zsh
alias be='bundle exec'
alias rials='rails'
alias raisl='rails'
alias rs='rails s'
alias tial='tail'
alias l='ls -la'
alias ls='ls -GFh' # Colorize output, add file type indicator, and put sizes in human readable format
alias gitclean='git ls-files --deleted -z | xargs -0 git rm' # useful after you have deleted some files and didn't gitrm them. this will stage them for you
alias ga='git add'
alias gpl="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --graph"
alias gs='git status'
alias gm='git commit -m'
alias gituntrackdir="git rm -r --cached " # usage: gituntrackdir directory_name
unalias gf # oh-my-zsh has this but we want to use tomnomnom/gf
alias myip="ifconfig | ag 'inet (\d+.*) netmask .* broadcast'" # list out your computer's local ip address
alias spring='nocorrect spring' # Don't correct these commands (zsh)
alias ag='nocorrect ag' # Don't correct these commands (zsh)
alias ql='qlmanage -p 2>/dev/null' # OS X Quick Look (Mac Only obvi)
